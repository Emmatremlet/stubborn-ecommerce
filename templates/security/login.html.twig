{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<div class="container mt-5">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Se déconnecter</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-4 font-weight-normal text-center">Veuillez vous connecter</h1>

		<div class="card shadow-sm p-4 d-flex justify-content-center align-items-center mx-auto" style="width: 25rem;">
			<form method="post">
				<div class="mb-3">
					<label for="inputEmail" class="form-label">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="mb-3">
					<label for="inputPassword" class="form-label">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="form-check mb-3">
					<label class="form-check-label">
						<input type="checkbox" name="_remember_me" class="form-check-input">
						Se souvenir de moi
					</label>
				</div>

				<div class="text-center">
					<button class="btn btn-lg btn-primary " type="submit">Se connecter</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
