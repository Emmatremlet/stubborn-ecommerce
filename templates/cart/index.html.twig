{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Votre panier</h1>

	<ul>
		{% for product in cart.products %}
			<li>
				<h3>{{ product.name }}</h3>
				<p>{{ product.price }}
					€</p>
				<form method="post" action="{{ path('cart_remove', {id: product.id}) }}">
					<button type="submit">Retirer</button>
				</form>
			</li>
		{% endfor %}
	</ul>

	<p>
		<strong>Total :
			{{ cart.getTotalPrice() }}
			€</strong>
	</p>
	<a href="{{ path('products') }}">Continuer mes achats</a>
	<form method="post" action="{{ path('cart_checkout') }}">
		<button type="submit">Finaliser ma commande</button>
	</form>
{% endblock %}
